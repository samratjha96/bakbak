# Application Configuration
NODE_ENV=production
PORT=3010
HOSTNAME=0.0.0.0
BASE_URL=http://localhost:3010

# Auth
BETTER_AUTH_SECRET=your-secure-random-string-here
BETTER_AUTH_URL=http://localhost:3010
GOOGLE_CLIENT_ID=
